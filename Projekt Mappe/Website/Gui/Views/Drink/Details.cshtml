@model dynamic
@using Gui.OrderServiceRef;

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Drink</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            model.Drink.Description
        </dt>

        <dd>
            Descriptopn
        </dd>

        <dt>
            model.Drink.Img
        </dt>

        <dd>
            Image
        </dd>

        <dt>
            model.Drink.Name
        </dt>

        <dd>
            Name
        </dd>

        <dt>
            model.Drink.Price
        </dt>

        <dd>
            Price
        </dd>

    </dl>
    <table class="table" style="color: white;">
        <h4>Ingredients</h4>
        <tr>
            <th>
                Name
            </th>
            <th>
                Procent
            </th>
        </tr>

        @foreach (var item in @Model.Ingredients)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Procent
                </td>
            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
