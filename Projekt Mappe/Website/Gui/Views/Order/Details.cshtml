@model dynamic
@using Gui.OrderServiceRef;

@{
    ViewBag.Title = "Details";
}

<h2>Order Detaljer</h2>

<div style="color: white;">
  <input id="Button1" type="button" value="Complete Order" onclick="location.href='@Url.Action("Fuldføre Order", "Order", new { id = Model.Order.ID })'" />
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Total Price
        </dt>

        <dd>
            @Model.Order.TotalPrice
        </dd>

        <dt>
            Discount
        </dt>

        <dd>
            @Model.Order.Discount
        </dd>

        <dt>
            Status
        </dt>

        <dd>
            @Model.Order.Status
        </dd>

        <dt>
            Date
        </dt>

        <dd>
            @Model.Order.Date
        </dd>
    </dl>

    <hr/>

    <table class="table" style="color: white;">
        <h4>Ting i kurven</h4>
        <tr>
            <th>
               Antal
            </th>
            <th>
                Pris ialt
            </th>
            <th>
                Drink
            </th>
        </tr>

        @foreach (var item in @Model.OrderLines)
        {
            <tr>
                <td>
                    @using (Html.BeginForm("EditAmount", "Order", FormMethod.Post))
                    {
                        <input type="hidden" name="id" value="@item.ID" />
                        <input type="hidden" name="orderID" value="@Model.Order.ID" />
                        <input type="text" name="text" value="@item.Amount" style="width:30px;"/>
                        <input type="submit" id="sumbitText" value="Edit" />
                    }
                </td>
                <td>
                    @item.TotalPrice
                </td>
                <td>
                    @item.Drink.Name
                </td>
                <td>
                    @*<input id="btnEdit" type="button" value="Ændre" onclick="location.href='@Url.Action("Edit", "Order", new { id = item.ID })'" />*@
                    <input id="btnDelete" type="button" value="Delete" onclick="location.href='@Url.Action("Slet", "Order", new {OrderLineId = item.ID, id = Model.Order.ID })'" />
                </td>
            </tr>
        }

    </table>
</div>
