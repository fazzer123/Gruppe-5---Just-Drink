@model dynamic
    @using Gui.OrderServiceRef;
    @using Gui.UserServiceRef;

<h1>Username: @Model.User.UserName</h1>

<div style="color: white;">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Firstname
        </dt>

        <dd>
            @Model.User.FirstName
        </dd>
        <dt>
            Lastname
        </dt>

        <dd>
            @Model.User.LastName
        </dd>

        <dt>
            Birthday
        </dt>

        <dd>
            @Model.User.Birthday
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Model.User.Email
        </dd>

        <dt>
            Phone
        </dt>

        <dd>
            @Model.User.Phone
        </dd>
        
        <dt>
            Gender
        </dt>

        <dd>
            @Model.User.Gender
        </dd>
    </dl>
    <p>
        <input id="btnDetails" type="button" value="Digital Tegnebog" onclick="location.href='@Url.Action("WalletDetails", new { id = Model.User.ID })'" />
    </p>
    <h2>Favoritter</h2>
    @foreach(var drink in Model.User.FavoritesDrinks)
    {
        <table>
            <tr>
                <td>
                    <img src="@Url.Content(drink.Img)" alt="Image" height="100px" width="150px" />
                </td>
                <td>
                    @drink.Name
                </td>
            </tr>
        </table>
    }
</div>
<div style="color:white;">
    <h2>Orders</h2>
    <table>
        @foreach(var order in @Model.Order)
        {
            <tr>
                <th>
                    Date
                </th>
                <th>
                     Total Price
                </th>
            </tr>
            <tr>
                <td>
                    @order.Date
                </td>
               
                <td>
                    @order.TotalPrice
                </td>
                <td>
                    <input id="btnDetails" type="button" value="Details" onclick="location.href='@Url.Action("Details", "Order", new { id = @order.ID })'" />
                    <input id="btnDelete" type="button" value="Delete" onclick="location.href='@Url.Action("DeleteOrder", "Order", new { ID = @order.ID })'" />
                </td>
            </tr>
        }
    </table>
</div>
